    "@aws-sdk/client-ssm": "^3.614.0",
    "@storytailor/knowledge-base-agent": "file:../knowledge-base-agent",
    "@storytailor/personality-agent": "file:../personality-agent",
    "@supabase/supabase-js": "^2.54.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "logform": "^2.7.0",
    "openai": "^4.20.1",
    "redis": "^4.6.10",
